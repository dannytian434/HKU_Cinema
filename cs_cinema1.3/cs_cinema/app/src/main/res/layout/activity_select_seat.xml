<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectSeat">

    <RelativeLayout
        android:id="@+id/rl_thum"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        >
        <com.hku.cs_cinema.view.SSThumView
            android:id="@+id/ss_ssthumview"
            android:layout_width="@dimen/ss_seat_thum_size_w"
            android:layout_height="@dimen/ss_seat_thum_size_h"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip" />

    </RelativeLayout>


    <com.hku.cs_cinema.view.SSView
        android:id="@+id/mSSView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/order"
        android:layout_below="@+id/rl_thum" />

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>